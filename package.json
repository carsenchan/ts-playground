{
  "name": "ts-playground",
  "version": "0.0.1",
  "description": "Typescript Playground",
  "main": "index.js",
  "scripts": {
    "play": "nodemon",
    "eslint": "node node_modules/eslint/bin/eslint.js src/**"
  },
  "keywords": [
    "typescript",
    "nodemon",
    "playground"
  ],
  "author": "Carsen Chan",
  "license": "ISC",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node src/index.ts",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/node": "^11.11.6",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.4000"
  }
}
